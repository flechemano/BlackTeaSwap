{
  "extends": ["//"],
  "pipeline": {
    "generate": {
      "outputs": [".mesh/**"],
      "dependsOn": [],
      "env": [],
      "cache": true
    },
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["^build", "generate"],
      "env": [
        "ALCHEMY_ID",
        "STRAPI_API_URL",
        "STRAPI_PREVIEW_SECRET",
        "NEXT_TELEMETRY_DISABLED"
      ],
      "cache": true
    },
    "check": {
      "dependsOn": ["^build", "generate"],
      "cache": false
    },
    "sitemap": {
      "outputs": [
        "public/sitemap.xml",
        "public/sitemap-*.xml",
        "public/robots.txt"
      ],
      "dependsOn": ["build"],
      "cache": true
    }
  }
}
