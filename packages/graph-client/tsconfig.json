{
  "include": [
    "lib",
    "resolvers",
    "transformers",
    "__tests__"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": ".",
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
  }
}