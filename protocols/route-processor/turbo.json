{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "outputs": [
        "typechain/**",
        "artifacts/**",
        "!artifacts/build-info/**",
        "cache/**",
        "!cache/solidity-files-cache.json"
      ],
      "dependsOn": ["^build", "export"],
      "env": ["TS_NODE_TRANSPILE_ONLY"],
      "cache": true
    },
    "check": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "export": {
      "dependsOn": ["^build"],
      "inputs": ["deployments/**"],
      "outputs": ["exports/**"],
      "cache": true
    },
    "node": {
      "dependsOn": ["build"],
      "outputs": ["deployments/**"],
      "persistent": true
    }
  }
}
